{
  "name": "create-react-typescript-sass-webextension",
  "version": "0.1.0",
  "description": "Boilerplate for building webextension targeting Chrome & Firefox with react, typescript and sass",
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "dev": "node scripts/start.js",
    "build": "node scripts/build.js",
    "devbuild": "node scripts/devbuild.js",
    "test": "node scripts/test.js --env=jsdom",
    "commit": "git-cz",
    "release": "standard-version",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crimx/create-react-typescript-sass-webextension"
  },
  "homepage": "https://github.com/crimx/create-react-typescript-sass-webextension",
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/crimx/create-react-typescript-sass-webextension/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/node": "^10.12.10",
    "@types/react": "^16.7.8",
    "@types/react-dom": "^16.0.11",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "web-ext-types": "^3.0.0",
    "webextension-polyfill": "^0.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "@types/jest": "^22.0.1",
    "@types/sinon-chrome": "^2.2.0",
    "autoprefixer": "^7.2.5",
    "babel-core": "6.26.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "^2.3.0",
    "chokidar": "^2.0.0",
    "commitizen": "^2.9.6",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "5.0.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "^1.1.6",
    "fork-ts-checker-webpack-plugin": "^0.3.0",
    "fs-extra": "^5.0.0",
    "generate-json-webpack-plugin": "^0.2.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^1.2.0",
    "jest": "^22.0.4",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "node-sass": "^4.7.2",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-loader": "^2.0.10",
    "postcss-safe-important": "^1.1.0",
    "raf": "3.4.0",
    "react-dev-utils": "^5.0.3",
    "sass-loader": "^6.0.6",
    "semver": "^5.6.0",
    "sinon-chrome": "^2.3.2",
    "standard-version": "^4.4.0",
    "style-loader": "^0.20.3",
    "text-transform-loader": "^2.0.0",
    "ts-jest": "^22.4.6",
    "ts-lint": "^4.5.1",
    "ts-loader": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "0.6.2",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/test/unit/**/*.{ts,tsx,js,jsx}",
      "<rootDir>/src/**/__tests__/**/*.{ts,tsx,js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{ts,tsx,js,jsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(ts|tsx|js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx",
      "node"
    ]
  }
}
